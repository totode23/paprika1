<div class="current-user">
  <% if user_signed_in? %>
    ユーザー名:<%= current_user.name %><br>
  <% else %>
    ログインしてください<br>
  <% end %>
</div>

<%= form_with model: @food, local:true do |f| %>
  <div class="register-content">
      <%= f.label :photo ,"!",class:"image-content"%>
      <%= f.file_field :photo %>
    <div class="name-content">
      <%= f.text_field :name ,placeholder: "食材名"%>
    </div>

    <div class="quantity-content">
      個数: <%= f.number_field :quantity ,value: 1 %>
    </div>

    <div class="expiry-content">
      賞味期限: <%= f.date_field :expiry_at ,value: Date.today%>
    </div>

    <div class="memo-content">
      <%= f.text_area :memo, class: "memo" ,cols:"40", rows:"5" ,wrap:"hard" ,placeholder:"メモ" %>
    </div>

    <div class="add-content">
    <%= f.submit "追  加"%>
    </div>
  </div>
<% end %> 