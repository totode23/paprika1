<div class="current-user">
  <% if user_signed_in? %>
    ユーザー名:<%= current_user.name %><br>
  <% else %>
    ログインしてください<br>
  <% end %>
</div>
    <div class="news-logo">
        設　定
    </div>
<%= form_with model: @setting, local:true do |f| %>
  <div class="setting-content">
    <div class="name-content">
    </div>

    <div class="inform-setting">
      通知　
      <%= f.radio_button :inform, checked: true %><%= label_tag :inform, "する" %>
      
      <%= f.radio_button :inform, checked: false %><%= label_tag :inform, "しない" %>
      <br>
    </div>

    <div class="inform-date-setting">
      通知を送る日　<%= f.number_field :inform_date %>日前<br>
    </div>

    <div class="red-date-setting">
      お知らせ色（赤）　<%= f.number_field :red_date %>日前<br>
    </div>

    <div class="green-date-setting">
      お知らせ色（緑）　<%= f.number_field :green_date %>日前<br>
    </div>

    <div class="add-content">
      <%= f.submit "変　更"%>
    </div>
  </div>
<% end %> 