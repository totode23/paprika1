<div class="current-user">
  <% if user_signed_in? %>
    ユーザー名:<%= current_user.name %><br>
  <% else %>
    ログインしてください<br>
  <% end %>
</div>

<% if @foods.present? %> 
  
  <% @foods.each do |food| %>
    <div class="foods-index">
    <%= link_to "","/edit/#{food.id}",class: "a"%>
    
      <div class="food-image">
        <%= image_tag "logo.png",width: "auto", height: "100%" %>      
      </div>
      <div class="count">
       残り: <%= food.quantity %> 個<br>
      </div>
      <%= check_box 'object', 'method'%>

      <div class="food-name">
        <%= food.name %><br>
      </div>
      <div class="expiry_at-count">
        あと<%=  (food.expiry_at - Date.today).to_i  %>日
      </div>
      <% if food.memo.present? %>
       <div class="a-memo">
          メモあり
        </div>
      <% end %>
    </div>
   <% end %>
    
  
<% else %> 
  <div class="first-message-box">
    <div class="first-button">
      <%= button_to image_tag("register-icon.png"),{controller: "homes", action: "register"}, {method: :get, class: "button-register"}%>
    </div>
    <div class="first-message">
      <p>から食材を登録しましょう</p>
    </div>
  </div>
<% end %> 

<div class="i">
</div>
